# Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://chat.example.com

# Database
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=telegram_chat
DATABASE_USER=postgres
DATABASE_PASSWORD=${DATABASE_PASSWORD}
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}?schema=public

# Redis
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# MinIO
MINIO_ENDPOINT=minio-service
MINIO_PORT=9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_BUCKET=telegram-chat-files
MINIO_USE_SSL=true

# MeiliSearch
MEILISEARCH_HOST=meilisearch-service
MEILISEARCH_PORT=7700
MEILISEARCH_MASTER_KEY=${MEILISEARCH_MASTER_KEY}

# NATS
NATS_URL=nats://nats-service:4222

# ClamAV
CLAMAV_HOST=clamav-service
CLAMAV_PORT=3310

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=5m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav,application/pdf

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Production Features
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_DEBUG_ROUTES=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true