{
  "name": "@telegram-chat/api",
  "version": "1.0.0",
  "description": "NestJS backend API for telegram-web-chat",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=src --testPathIgnorePatterns=integration --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:load": "k6 run k6/load-test.js",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:validate": "ts-node scripts/validate-schema.ts",
    "db:reset": "prisma migrate reset --force",
    "db:init": "bash scripts/init-db.sh",
    "security:audit": "ts-node scripts/security-audit.ts",
    "security:scan": "npm audit && ts-node scripts/security-audit.ts"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^1.2.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^3.0.4",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^4.2.1",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^5.1.0",
    "@types/uuid": "^10.0.0",
    "argon2": "^0.31.0",
    "aws-sdk": "^2.1691.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "clamscan": "^2.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express-rate-limit": "^6.11.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.28.0",
    "jsonwebtoken": "^9.0.2",
    "meilisearch": "^0.35.1",
    "mime-types": "^2.1.35",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^5.1.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.7.2",
    "swagger-ui-express": "^5.0.1",
    "ulid": "^2.3.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
