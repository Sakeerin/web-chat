{
  "name": "telegram-web-chat",
  "version": "1.0.0",
  "description": "A fast, secure, and scalable web chat application with Telegram-like experience",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:unit": "pnpm --recursive test:unit",
    "test:integration": "pnpm --recursive test:integration",
    "test:e2e": "pnpm --recursive test:e2e",
    "test:load": "pnpm --recursive test:load",
    "test:cov": "jest --coverage",
    "test:coverage": "node scripts/test-coverage.js",
    "test:watch": "pnpm --recursive test:watch",
    "test:ci": "pnpm test:coverage",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "format": "pnpm --recursive format",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed": "pnpm --filter api db:seed",
    "db:studio": "pnpm --filter api db:studio",
    "docker:build": "bash scripts/build-images.sh",
    "docker:build:tag": "bash scripts/build-images.sh",
    "k8s:deploy:dev": "bash scripts/k8s-deploy.sh development deploy",
    "k8s:deploy:staging": "bash scripts/k8s-deploy.sh staging deploy",
    "k8s:deploy:prod": "bash scripts/k8s-deploy.sh production deploy",
    "k8s:status": "bash scripts/k8s-deploy.sh development status",
    "k8s:logs": "bash scripts/k8s-deploy.sh development logs",
    "k8s:destroy": "bash scripts/k8s-deploy.sh development destroy",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:prod": "bash scripts/deploy.sh production"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}